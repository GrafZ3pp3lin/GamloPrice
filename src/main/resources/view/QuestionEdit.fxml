<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<AnchorPane prefHeight="450.0" prefWidth="800.0" styleClass="background" stylesheets="@style.css"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <TextField fx:id="textField_value" promptText="Value" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
               AnchorPane.topAnchor="10.0"/>
    <Separator prefWidth="200.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="44.0"/>
    <SplitPane dividerPositions="0.25" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="45.0">
        <AnchorPane minWidth="100.0" styleClass="background">
            <VBox layoutX="10.0" layoutY="10.0" spacing="10.0" AnchorPane.leftAnchor="10.0"
                  AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                <padding>
                    <Insets left="5.0" top="5.0"/>
                </padding>
                <RadioButton fx:id="radioButton_question" mnemonicParsing="false" selected="true"
                             styleClass="pane-radio-button" text="Question">
                    <toggleGroup>
                        <ToggleGroup fx:id="pane"/>
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="radioButton_answer" mnemonicParsing="false" styleClass="pane-radio-button"
                             text="Answer" toggleGroup="$pane"/>
            </VBox>
            <ListView fx:id="listView_Components" layoutX="14.0" layoutY="80.0" prefHeight="223.0" prefWidth="177.0"
                      AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
                      AnchorPane.topAnchor="80.0"/>
            <HBox alignment="CENTER_LEFT" layoutX="63.0" layoutY="334.0" prefHeight="40.0" spacing="10.0"
                  AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
                <Button fx:id="button_addComponent" mnemonicParsing="false" text="+"/>
            </HBox>
        </AnchorPane>
        <AnchorPane fx:id="anchorPane_Component" minWidth="200.0" styleClass="background">
            <TextField fx:id="textField_type" promptText="Component Type" AnchorPane.leftAnchor="10.0"
                       AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0"/>
            <TextField fx:id="textField_name" promptText="Component Name" AnchorPane.leftAnchor="10.0"
                       AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="45.0"/>
            <ScrollPane fx:id="scrollPane_data" hbarPolicy="NEVER" layoutX="10.0" layoutY="100.0"
                        AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
                        AnchorPane.topAnchor="80.0">
                <GridPane fx:id="gridPane_Components" hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints fx:id="nameColumn" hgrow="SOMETIMES"/>
                        <ColumnConstraints fx:id="valueColumn" hgrow="SOMETIMES"/>
                        <ColumnConstraints hgrow="NEVER" halignment="CENTER" minWidth="30"/>
                    </columnConstraints>
                </GridPane>
            </ScrollPane>
            <HBox alignment="CENTER_RIGHT" prefHeight="40.0" spacing="10.0" AnchorPane.bottomAnchor="10.0"
                  AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
                <Button fx:id="button_addComponentData" mnemonicParsing="false" text="+"/>
                <Button fx:id="button_cancelComponent" mnemonicParsing="false" text="cancel"/>
                <Button fx:id="button_OKComponent" mnemonicParsing="false" text="OK"/>
            </HBox>
        </AnchorPane>
        <styleClass>
            <String fx:value="background"/>
            <String fx:value="question-split-pane"/>
        </styleClass>
    </SplitPane>
    <Separator prefWidth="200.0" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="0.0"/>
    <HBox alignment="CENTER_RIGHT" prefHeight="40.0" spacing="10.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <padding>
            <Insets left="10.0" right="10.0"/>
        </padding>
        <Button fx:id="button_cancel" mnemonicParsing="false" text="cancel"/>
        <Button fx:id="button_OK" mnemonicParsing="false" text="OK"/>
    </HBox>
</AnchorPane>
